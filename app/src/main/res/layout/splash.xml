<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Splash"
    android:background="#162028"
    >

    <!--
        Created by Adam Boole
        The splash screen xml sets up the MicroFarm logo screen appropriately
        One image is static for the logo
        The other image is dynamic and animates to spin during the splash screen.
    -->

    <View
        android:id="@+id/anchor6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="0dp"/>

    <View
        android:id="@+id/anchor7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_toRightOf="@+id/anchor6"
        android:layout_below="@+id/anchor6"
        android:layout_marginTop="37dp"
        android:layout_marginLeft="31dp"
        />


    <ImageView
        android:id="@+id/imageAnim"
        android:src="@drawable/microsplashanim2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignRight="@+id/anchor7"
        android:layout_alignBottom="@+id/anchor7"


        ></ImageView>

    <ImageView
        android:layout_width="400dp"
        android:layout_height="281dp"
        android:id="@+id/imageView"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/microsplashbase" />

</RelativeLayout>